@model IEnumerable<EFBANXE.Models.Xe>

@{
    ViewBag.Title = "Trang quản lý";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center btn-info" style="padding:10px">Danh sách xe</h2>

<p class="pull-left">
    @Html.ActionLink("Tạo mới", "Create","Xes",new { @class="btn btn-primary"}) 
    @Html.ActionLink("Xe đã xóa", "Deleted", "Xes", new { @class = "btn btn-success" })
</p>
<table class="table table-hover table-responsive">
    <tr class="active">
        <th width="150">
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th width="300">
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DanhGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiGian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiXe.Ten)
        </th>
        <th>Chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td width="150">
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td width="300">
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            <span>@item.Gia.ToString("#,#,#")</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DanhGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiGian)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiXe.Ten)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.XeId},new { @class="btn btn-primary"}) 
            @Html.ActionLink("Chi tiết", "Details", new { id=item.XeId }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Xóa", "Delete", new { id=item.XeId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
</table>
